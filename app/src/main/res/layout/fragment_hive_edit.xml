<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".fragments.HiveEditFragment">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">


                <ImageView
                    android:id="@+id/iv_pick_hive"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_pick_hive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/orange"
                    android:text="Выбрать изображение"
                    android:textColor="@color/black"
                    android:enabled="false"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_hive_nomer"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Номер:  "
                        android:textColor="@color/black"
                        android:textSize="26dp" />

                    <EditText
                        android:id="@+id/et_hive_nomer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:inputType="text"
                        android:scrollbarSize="4dp"
                        android:enabled="false"
                        android:textColor="@color/black"
                        android:textSize="26dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_hive_ramki"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Рамки:"
                        android:textColor="@color/black"
                        android:textSize="26sp" />

                    <EditText
                        android:id="@+id/en_hive_ramki"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:inputType="number"
                        android:scrollbarSize="4dp"
                        android:text=""
                        android:enabled="false"
                        android:textColor="@color/black"
                        android:textSize="26sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_hive_med"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Мед:"
                        android:textColor="@color/black"
                        android:textSize="26sp" />

                    <EditText
                        android:id="@+id/en_hive_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:inputType="number"
                        android:scrollbarSize="4dp"
                        android:text=""
                        android:enabled="false"
                        android:textColor="@color/black"
                        android:textSize="26sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_hive_sila"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Сила:"
                        android:textColor="@color/black"
                        android:textSize="26sp" />

                    <EditText
                        android:id="@+id/en_hive_sila"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="8"
                        android:inputType="number"
                        android:scrollbarSize="4dp"
                        android:text=""
                        android:enabled="false"
                        android:textColor="@color/black"
                        android:textSize="26sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_hive_ves"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Расплод:"
                        android:textColor="@color/black"
                        android:textSize="26sp" />

                    <EditText
                        android:id="@+id/en_hive_ves"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription=""
                        android:ems="8"
                        android:inputType="number"
                        android:scrollbarSize="4dp"
                        android:text=""
                        android:enabled="false"
                        android:textColor="@color/black"
                        android:textSize="26sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_hive_queen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Матка:"
                        android:textColor="@color/black"
                        android:textSize="26sp" />

                    <EditText
                        android:id="@+id/et_hive_queen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription=""
                        android:ems="8"
                        android:inputType="text"
                        android:scrollbarSize="4dp"
                        android:text=""
                        android:enabled="false"
                        android:textColor="@color/black"
                        android:textSize="26sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_hive_zametki"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Примечания:"
                        android:textColor="@color/black"
                        android:textSize="26dp" />


                </LinearLayout>

                <EditText
                    android:id="@+id/et_hive_zametki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="Напишите примечания"
                    android:inputType="textMultiLine"
                    android:minHeight="100dp"
                    android:textColor="@color/black"
                    android:enabled="false"
                    android:textSize="26sp" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
