<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hive_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="0dp"
    android:background="@drawable/hive_png"
    app:cardCornerRadius="8dp"
    android:elevation="8dp">

    <RelativeLayout
        android:id="@+id/theory_topic1"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:background="@drawable/hivee"
        android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_hive_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="18sp"/>


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_hive_strength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Strength"
            android:textColor="@color/black"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_hive_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="14sp"/>


    </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>